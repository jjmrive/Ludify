<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/prizeStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/ic_clear_black_64dp"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="0dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintHorizontal_bias="0.03"
                card_view:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/prizeDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Gorra nueva"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                card_view:layout_constraintLeft_toRightOf="@+id/prizeStatus"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintRight_toLeftOf="@+id/prizePts"
                card_view:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/prizePts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintHorizontal_bias="0.97"
                card_view:layout_constraintVertical_bias="0.5" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>